                    $('.datepicker').datepicker({
                        format: 'dd-mm-yyyy',
                        language: 'ru',
                        weekStart: 1
                    }).on('changeDate', function(e) {
                       $(this).datepicker('hide');
                    });
                }
                reTooltip();
            } catch(e) {
                alert(e);
            }
        });

        function selectNext(fieldset) {
            if($(fieldset).size() == 0) {
                return false;
            }
            var next_fieldset = $(fieldset).next('fieldset');
            var inputSelector = 'input, select, textarea';
            var control = $(next_fieldset).find(inputSelector).filter(':visible');
            next_control = $(control).not('[type="hidden"]').first();
            if(next_control.size() == 0) {
                selectNext(next_fieldset);
            } else {
                next_control.focus();
            }
            return false;
        }

        function reTooltip() {
            // tooltip
            $('.forms,#inner-table-form-add .popup-form-content').tooltip({
                position: {
                    my: "left+20 center+10",
                    at: "center top",
                    using: function( position, feedback ) {
                        $( this ).css( position );
                        $( "<div>" )
                        .addClass( "arrow" )
                        .addClass( feedback.vertical )
                        .addClass( feedback.horizontal )
                        .appendTo( this );
                    }
                }
            });
        }

        // @author: sciner
        function addMoreFileField(target, name, max_input_count) {
            if(max_input_count > 0) {
                if($(target).find('input[type=file]').size() >= max_input_count) {
                    // Нельзя загружать больше файлов чем записано в Constant::VAR_MAX_UPLOAD_FILES
                    return false;
                }
            }
            var f = '<input name="'+name+'" type="file" class="gn-file-add" data-more_file_field_target="' + target + '" /><br />';
            $(target).append(f);
            $(target).find('input[type=file]:last').change(function(e){
                // alert(target + '\n' + name + '\n' + max_input_count);
                var target = $(this).data('more_file_field_target');
                $(this).unbind('change');
                return addMoreFileField(target, name, max_input_count);
            }).styler();
            return false;
        }

    </script>
