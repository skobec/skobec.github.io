        $(function() {
            try {
                // вкладки
                $('.nav-tabs a').click(function(e) {
                    e.preventDefault();
                    $(this).tab('show');
                });
                // кастомизация инпутов
                $('input[type=checkbox], input[type=radio], select, input[type=file], input[type=text], input[type=password], input[type=submit], textarea').styler({
                    selectVisibleOptions: 20,
                });
                // выбор даты
